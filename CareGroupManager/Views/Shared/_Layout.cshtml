    </head>
    <body>
        <header class="navbar-fixed-top">
            <div class="navbar navbar-inverse no-bottom-margin no-border-radius" ng-controller="navigationCtrl as nav" cg-require-login ng-cloak>
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a ng-href="#/care-groups" class="navbar-brand">Care Group Manager</a>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li ng-repeat="menuItem in nav.menu" ng-class="{active:nav.isCurrentRoute(menuItem)}">
                                <a ng-href="#{{::menuItem.route}}">{{::menuItem.name}}</a>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><cg-username></cg-username> <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#/user-settings">User Settings</a></li>
                                    <li class="divider"></li>
                                    <li><a href="" ng-click="nav.logout()">Logout</a></li>
                                </ul>
                            </li>
                        </ul>
                        <a ng-href="#{{::action.route}}" class="btn btn-success navbar-btn navbar-right" ng-repeat="action in nav.getActions()"><i class="fa" ng-class="action.iconClass"></i>&nbsp; {{::action.name}}</a>
                    </div>
                </div>
            </div>
            <notification-bar></notification-bar>
        </header>
        <div class="container">
            @RenderBody()
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/angular")
        @Scripts.Render("~/bundles/angular-route")
        @Scripts.Render("~/bundles/angular-animate")
        @Scripts.Render("~/bundles/angular-messages")
        @Scripts.Render("~/bundles/tools")
        @Scripts.Render("~/bundles/app")
    </body>
</html>